---
const {icon, title,gradient,gradientIcon, item1, item2, item3} = Astro.props
---
<article class=" group relative overflow-hidden rounded-xl bg-black py-8  transition-all duration-300 hover:scale-[1.02] hover:shadow-2xl">
    <div class={gradient}></div>
    <div class="pr-24 pl-10 z-10">
      <div class={gradientIcon}>
        <i class={icon}></i>
      </div>
      <h3 class="mb-4 text-2xl font-bold text-white">{title}</h3>
      <ul class="space-y-2 text-zinc-400">
        <li class="flex items-center">
          <span class="mr-2">•</span>
          {item1}
        </li>
        <li class="flex items-center">
          <span class="mr-2">•</span>
          {item2}
        </li>
        
        <li class="flex items-center">
          <span class="mr-2">•</span>
          {item3}
        </li>
      </ul>
    </div>
  </article>