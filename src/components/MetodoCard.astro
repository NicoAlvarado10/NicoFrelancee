---
const {gradient, gradientIcon, icon, title, descp} = Astro.props
---
<article class=" group relative overflow-hidden rounded-xl bg-black py-5  transition-all duration-300 hover:scale-[1.02] hover:shadow-2xl ">
    <div class={gradient}></div>
    <div class=" px-5 z-10">
      <div class={gradientIcon}>
        <i class={icon}></i>
      </div>
      <h3 class="mb-4 text-xl font-bold text-white ">{title}</h3>
      <p class="text-zinc-400 ">{descp}</p>
    </div>
  </article>